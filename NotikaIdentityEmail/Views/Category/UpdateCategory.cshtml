@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/UserLayout/Index.cshtml";
}


<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Kategori Güncelleme Sayfası</h2>
                    </div>
                    <div class="row">

                        <form method="post">
                            <input type="hidden" asp-for="CategoryId" />
                            <label>Kategori Adı</label>
                            <input type="text" asp-for="CategoryName" class="form-control" />
                            <br />
                            <label>Kategori Ikon Url</label>
                            <input type="text" asp-for="CategoryIconUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success">Kategoriyi Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>>